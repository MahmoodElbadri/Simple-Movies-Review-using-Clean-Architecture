@model Review
@{
    ViewData["Title"] = "Add";
    ViewBag.CurrentUrl = "~/Review/Add";
}

<h1>Add Review</h1>

<form method="post" asp-controller="Review" asp-action="Add">
    <div>
        <input type="hidden" asp-for="UserId" value="@User.Identity?.Name" />
        <input type="hidden" asp-for="CreatedAt" value="@DateTime.Now"/>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" type="number" class="form-control" />
        <span asp-validation-for="Rating"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MovieId" class="control-label"></label>
        <select asp-for="MovieId"  class="form-select">
            <option value="">-- Select Movie --</option>
            @foreach (Movie movie in ViewBag.movies)
            {
                <option  value="@movie.MovieId">@movie.Title</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-4 mb-4">Save</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


